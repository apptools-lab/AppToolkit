{
  "name": "appworks-toolkit",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "setup": "rm -rf node_modules && rm -rf renderer/node_modules && npm run install:main && npm run install:renderer",
    "install:main": "ELECTRON_MIRROR=https://cdn.npm.taobao.org/dist/electron/ npm install --registry=http://registry.npm.taobao.org",
    "install:renderer": "cd renderer && npm install --registry=http://registry.npm.taobao.org --no-package-lock",
    "start": "concurrently \"npm run watch\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:electron": "npm run static:copy && electron ./dist",
    "static:copy": "cp -R ./main/data ./dist",
    "watch": "rm -rf ./dist && npm run watch:renderer & npm run watch:main",
    "watch:renderer": "cd ./renderer && npm start",
    "watch:main": "tsc --build ./main/tsconfig.json -w",
    "build": "rm -rf ./dist && npm run build:renderer && npm run build:main",
    "build:renderer": "cd ./renderer && npm run build",
    "build:main": "tsc --build ./main/tsconfig.json",
    "package": "npm run build && NPM_CONFIG_ELECTRON_MIRROR=http://npm.taobao.org/mirrors/electron/ electron-builder build --mac",
    "lint": "npm run eslint && npm run stylelint",
    "eslint": "eslint --ext .ts,.tsx,.js,.jsx ./",
    "eslint:fix": "npm run eslint -- --fix",
    "stylelint": "stylelint \"**/*.{css,scss,less}\"",
    "prepare": "husky install"
  },
  "main": "./dist/index.js",
  "build": {
    "appId": "appworks-toolkit",
    "productName": "Appworks Toolkit",
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "asar": false,
    "directories": {
      "buildResources": "resource",
      "output": "release"
    },
    "copyright": "Copyright Â© 2021 Appworks",
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/mac/icon.icns"
    },
    "dmg": {
      "window": {
        "width": 540,
        "height": 380
      },
      "contents": [
        {
          "x": 410,
          "y": 180,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 180,
          "type": "file"
        }
      ],
      "iconSize": 128
    }
  },
  "dependencies": {
    "@shockpkg/hdi-mac": "^1.6.1",
    "adm-zip": "^0.5.5",
    "compare-versions": "^3.6.0",
    "decompress": "^4.2.1",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^4.3.4",
    "execa": "^5.0.0",
    "fs-extra": "^9.1.0",
    "globby": "^11.0.3",
    "node-fetch": "^2.6.1",
    "shelljs": "^0.8.4",
    "strip-ansi": "^6.0.0",
    "sudo-prompt": "^9.2.1",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@iceworks/spec": "^1.0.0",
    "@types/decompress": "^4.2.3",
    "@types/node-fetch": "^2.5.10",
    "@types/shelljs": "^0.8.8",
    "concurrently": "^5.1.0",
    "electron": "^12.0.0",
    "electron-builder": "^22.10.5",
    "eslint": "^6.8.0",
    "husky": "^6.0.0",
    "stylelint": "^13.2.0",
    "typescript": "^4.0.0",
    "wait-on": "^5.3.0"
  }
}